<h1>投稿一覧</h1>

<% if user_signed_in? %>
  <% @posts.each do |post|%>
    <section class="card border-dark mt-5 mx-auto" style="width: 400px;" >
      <div class="card-header">
        <%= image_tag post.user.user_icon.url,size: "50x50",class: "icon" %>
        <h4><%= post.user.nickname %></h4>
        <%# ナビゲーションバー %>
        <nav class="navbar navbar-expand-lg navbar-light mx-auto ">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to "詳細", post%>
              </li>
              <li class="nav-item">
                <% if post.user_id==current_user.id %>
                    <%= link_to "編集",edit_post_path(post) %>
                  <% end %>
              </li>
              <li class="nav-item">
                <% if post.user_id==current_user.id %>
                    <%= link_to "削除",post,method: :delete,data:{confirm: "削除しますか"} %>
                <% end %>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <%# 画像表示 %>
      <% if post.image? %>
        <div class="card-img-top"><%= image_tag post.image.url %></div>
      <% end %>
      <%# 投稿内容表示 %>
      <div class="card-body">
        <p class="card-text"><%= simple_format(h post.content) %></p>
        <%# いいね機能 %>
        <p id="post-<%= post.id %>">
          <% if post.liked_by?(current_user) %>
            <%= render "like", post: post %>
          <% else %>
          <%= render "dislike",post: post %>
          <% end %>
        </p>
      </div>
    </section>
  <% end %>
<% else %>
  <p>ログインしてください</p>
<% end %>
