<h1>投稿詳細</h1>
<section class="card border-dark mt-5">
<div class="card-header">
  <h4><%= @post.title %></h4>
</div>
<div class="card-body">
  <p class="card-text"><%= simple_format(h @post.content) %></p>
</div>
<div class="card-body">
<% if @post.image? %>
  <p class="card-text"><%= image_tag @post.image.url %></p>
<% end %>
<div class="card-body">
  <% if @post.liked_by?(current_user) %>
    # いいね済の状態にする 
    <i class="fas fa-heart"></i>
  <% else %>
    <i class="fas fa-heart"></i>
  <% end %>
</div>
</div>
</section>
