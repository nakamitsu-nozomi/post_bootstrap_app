<h1>投稿詳細</h1>
<section class="card border-dark mt-5">
<div class="card-header">
  <h4><%= @post.title %></h4>
</div>
<div class="card-body">
  <p class="card-text"><%= simple_format(h @post.content) %></p>
</div>
<div class="card-body">
<% if @post.image? %>
  < class="card-text"><%= image_tag @post.image.url %></>
<% end %>
<div class="card-body">
  <%= render 'like' %>
</div>
</div>
</section>
