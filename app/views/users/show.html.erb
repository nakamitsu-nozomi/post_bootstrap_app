<h1><%=@user.nickname%>のマイページ</h1>

<% if @user.user_icon? %>
  <p><%= image_tag @user.user_icon.url %></p>
<% end %>

<%= link_to "#{@user.followings.count} followings", following_user_path(@user) %>
<%= link_to "#{@user.followers.count} followers", followers_user_path(@user) %>

<%= render "follow_button", user: @user %>
<% @user.posts.each do |post| %>
  <section class="card border-dark mt-5 mx-auto" style="width: 400px;">
    <div class="card-header">
      <h4><%= @user.nickname %></h4>
      <%# ナビーゲーションバー %>
      <nav class="navbar navbar-expand-lg navbar-light mx-auto ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "詳細", post%>
            </li>
            <li class="nav-item">
              <% if post.user_id==current_user.id %>
                <%= link_to "編集",edit_post_path(post) %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if post.user_id==current_user.id %>
                <%= link_to "削除",post,method: :delete,data:{confirm: "削除しますか"} %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>  
    </div>
    <% if post.image? %>
      <div class="card-img-top"><%= image_tag post.image.url %></div>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= simple_format(h post.content) %></p>
    </div>
  </section>
<% end %>